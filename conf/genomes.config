/*
 * -------------------------------------------------
 *  Nextflow config file for Genomes paths
 * -------------------------------------------------
 * Defines reference genomes
 * Can be used by any config that customises the base
 * path using $params.genomeAnnotationPath / --genomeAnnotationPath
 */

params {

  genomes {
    // Human
    'hg19' {
      starIndex = "${params.genomeAnnotationPath}/Human/hg19/indexes/STAR_2.7.6a/"
      gtf  = "${params.genomeAnnotationPath}/Human/hg19/gtf/gencode.v19.annotation.gtf"
      bed12 = "${params.genomeAnnotationPath}/Human/hg19/gtf/gencode.v19.annotation_proteinCoding.bed12"
    }
    'hg38' {
      starIndex = "${params.genomeAnnotationPath}/Human/hg38/indexes/STAR_2.7.6a/"
      gtf ="${params.genomeAnnotationPath}/Human/hg38/gtf/gencode.v34.annotation.gtf"
      bed12 = "${params.genomeAnnotationPath}/Human/hg38/gtf/gencode.v34.annotation_proteinCoding.bed12"
    }
    // Mouse
    'mm10' {
      starIndex = "${params.genomeAnnotationPath}/Mouse/mm10/indexes/STAR_2.7.6a/"
      gtf  = "${params.genomeAnnotationPath}/Mouse/mm10/gtf/gencode.vM22.annotation.gtf"
      bed12 = "${params.genomeAnnotationPath}/Mouse/mm10/gtf/gencode.vM22.annotation_proteinCoding.bed12"
    }

    'mm9' {
      starIndex  = "${params.genomeAnnotationPath}/Mouse/mm9/indexes/STAR_2.7.6a/"
      gtf   = "${params.genomeAnnotationPath}/Mouse/mm9/gtf/gencode.vM1.annotation.gtf"
      bed12 = "${params.genomeAnnotationPath}/Mouse/mm9/gtf/gencode.vM1.annotation_proteinCoding.bed12"
    }

  }

  designs {
    'custom' {
      barcodes {
        'indexB' {
          fasta = "${params.genomeAnnotationPath}/assets/LBC_Barcode_indexes/index_B_long.fasta"
          bwt2 = "${genomes_base}/tools/scRNA_LBC_bowtie2_indexes/ref_index_1"
          start = 1
          size = 16
        }
        'indexC' {
          fasta = "${params.genomeAnnotationPath}/assets/LBC_Barcode_indexes/index_C_long.fasta"
          bwt2 = "${genomes_base}/tools/scRNA_LBC_bowtie2_indexes/ref_index_2"
          start = 21
          size = 16
        }
        'indexD' {  
          fasta = "${params.genomeAnnotationPath}/assets/LBC_Barcode_indexes/index_D_long.fasta"
          bwt2 = "${genomes_base}/tools/scRNA_LBC_bowtie2_indexes/ref_index_3"
          start = 41
          size = 16
        }
      }
    }

  }
}

